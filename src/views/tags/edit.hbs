<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/tags/edit/{{tag.id_cat_tag}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{tag.title}}" class="form-control" name="title" placeholder="Title" autofocus required>
                        </div>
                        <div class="form-group">
                            <label for="selectedColor">Color de etiqueta</label>
                            <input type="color" name="color" id="selectedColor" class="form-control"
                                value="{{tag.color}}">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>