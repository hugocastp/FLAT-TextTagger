
<div class="container" p-4>
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div id = "alert_placeholder"></div>
            <div class="card mt-4">
                <div class="card-body">
                    <h3 class="card-title text-uppercase">
                        Descargar datos
                    </h3>
                    <form action="/download/download" name="download_data" method="POST" id="downloadData" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="optData"><strong>Seleccione un archivo</strong></label><br>
                            <select class="custom-select" name="optData" id="optData">
                                <option selected disabled="true">Seleccione</option>
                                {{#each documents as |document|}}
                                <option value="{{document.hash}}">{{document.name}}</option>
                                {{/each}}

                            </select>
                        </div>
                        <div class="form-group">
                            <label for="options"><strong>Escoga un modo de descarga</strong></label><br>
                            <label><input name="options" id="optionone" type="radio" value="optionone"> Categor√≠as </label>
                            <label style="margin-left: 3em"><input name="options" id="optiontwo" type="radio" value="optiontwo"> Etiquetas inmersas</label>
                        </div>
                        <div class="form-group">
                            <label for="savetype"><strong>Escoga un tipo de archivo a descargar</strong></label><br>
                            <label><input name="savetype" id="csv" type="radio" value="csv"> Csv</label>
                            <label style="margin-left: 3em"><input name="savetype" id="tsv" type="radio" value="tsv"> Tsv</label>
                            <label style="margin-left: 3em"><input name="savetype" id="excel" type="radio" value="excel"> Excel</label>
                            <label style="margin-left: 3em"><input name="savetype" id="json" type="radio" value="json"> Json</label>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block" id="download">
                                Descargar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>